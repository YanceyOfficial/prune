{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "esnext",
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "./src",
    "incremental": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "types": ["node"],
    "moduleResolution": "node",
    "resolveJsonModule": true
  },
  "exclude": ["node_modules"]
}
